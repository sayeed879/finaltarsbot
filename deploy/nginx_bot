server {
    listen 80;
    server_name your_domain.com; # <-- Put your domain here

    # Redirect all HTTP traffic to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name your_domain.com; # <-- Put your domain here

    # --- SSL Certificate (From Let's Encrypt) ---
    # You must replace these with your actual certificate paths
    ssl_certificate /etc/letsencrypt/live/your_domain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/your_domain.com/privkey.pem;
    
    # --- Security Headers & Options ---
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    
    # This is the secret webhook path
    # Telegram will send updates to: https://your_domain.com/webhook/YOUR_BOT_TOKEN
    location /webhook/YOUR_BOT_TOKEN/ {
        # Pass the request to our Gunicorn server
        proxy_pass http://127.0.0.1:8080;
        
        # --- Required Headers ---
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}